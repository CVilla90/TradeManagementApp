@page "{id:int}"
@model UpdateStatusModel
@{
    ViewData["Title"] = "Update Status";
}

<h2>Update Status</h2>

<form method="post">
    <input type="hidden" asp-for="Document.Id" />
    <label>Status:</label>
    <select asp-for="Document.Status">
        <option>In Review</option>
        <option>Approved</option>
        <option>Needs Revision</option>
    </select>
    <button type="submit">Update</button>
</form>

